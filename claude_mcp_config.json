{
  "mcpServers": {
    "remote-machine": {
      "command": "python3",
      "args": ["/path/to/remote_machine_server.py", "--transport", "stdio"],
      "env": {
        "PYTHONPATH": "/path/to/remote_machine_server"
      }
    },
    "remote-machine-sse": {
      "command": "python3", 
      "args": ["/path/to/remote_machine_server.py", "--transport", "sse", "--host", "0.0.0.0", "--port", "8765"],
      "env": {
        "PYTHONPATH": "/path/to/remote_machine_server"
      }
    }
  }
}